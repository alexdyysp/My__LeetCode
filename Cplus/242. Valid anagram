class Solution {
public:
/*
anagram word has a feature that the order of letters is changed but the number of letters is not changed.
so,just sort the string and compare them whether they are equal.
*/
    bool isAnagram(string s, string t) {
        sort(s.begin(),s.end());
        sort(t.begin(),t.end());
        return s==t;
    }
};
